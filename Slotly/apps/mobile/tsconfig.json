{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",  
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "expo/types/**/*.ts",
    "expo-env.d.ts",
    "app",
    "components",
    "types/**/*.d.ts",
    ".expo/types/**/*.ts"
  ]
}
