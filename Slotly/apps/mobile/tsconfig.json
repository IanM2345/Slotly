{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],
    "paths": { "@/*": ["./*"] },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "expo/types/**/*.ts",
    "expo-env.d.ts",
    "app",
    "components",
    "types/**/*.d.ts",
    ".expo/types/**/*.ts"
  ]
}
